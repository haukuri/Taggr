<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <TextView android:layout_height="wrap_content" android:id="@+id/textView1" android:layout_width="wrap_content" android:text="@string/login_instructions"></TextView>
    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/useridEntry" android:numeric="integer" android:text="@string/empty_string" android:gravity="center"></EditText>
    <Button android:gravity="fill" android:layout_height="wrap_content" android:id="@+id/loginButton" android:text="@string/login" android:layout_width="match_parent"></Button>
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="match_parent" android:gravity="bottom" android:orientation="horizontal">
        <LinearLayout android:id="@+id/linearLayout3" android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center_vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/server_status_label" android:id="@+id/serverStatusText"></TextView>
            <LinearLayout android:layout_height="wrap_content" android:gravity="right" android:id="@+id/linearLayout2" android:layout_width="match_parent">
                <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/refreshButton" android:text="@string/refresh"></Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
